<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_a00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kangle.library.subActivity.A00Activity"
    android:orientation="vertical"
    >



    <TextView
        android:text="各种选择控件，view既可以用在基于Activity的布局文件里，也可以用在对话框窗口里，其中pickerView和wheelView在使用时需要对给待被选择的变量赋初值，如果只是打开了该控件，但是没有滑动，待选数据是空的，因此需要判断"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:onClick="bt01"
        android:text="pickerView 选择控件(基于父布局)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:onClick="bt02"
        android:text="pickerView 选择控件(基于对话框)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:onClick="bt03"
        android:text="wheelView 选择控件"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />








</LinearLayout>
